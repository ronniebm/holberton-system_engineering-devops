#!/usr/bin/env bash
# This scripts installs nginx in a new ubuntu machine.                                               
sudo apt update
sudo -y apt-get install curl
sudo -y apt-get install nginx
sudo ufw allow 'Nginx Full'
sudo service nginx start
rm /var/www/html/index*.html
echo '<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>welcome</title>
</head>
<body>
    Holberton School
</body>
</html>' > /var/www/html/index.html
